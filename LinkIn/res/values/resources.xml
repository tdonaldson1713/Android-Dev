<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleBar.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="TitleBar.Medium_2" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="TitleBar.Large" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="TitleBar_LargeLayout">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="SocialNetworkLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SocialNetworkImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_weight">0.23</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    
    <style name="SocialNetworkImageButton.LargeLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    
    <style name="SocialLogStyle" parent="style/SocialNetworkImageButton">
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/disconnected</item>
    </style>
    
    <style name="SocialLogStyle2" parent="style/SocialNetworkImageButton">
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/disconnected</item>
    </style>
    
    <style name="SocialLogStyle_Large" parent="style/SocialNetworkImageButton">
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/disconnected_large</item>
    </style>
    
    <style name="SocialLogStyle2_Large" parent="style/SocialNetworkImageButton">
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/disconnected_large</item>
    </style>
</resources>