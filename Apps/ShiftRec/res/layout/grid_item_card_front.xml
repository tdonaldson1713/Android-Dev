<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_front"
    android:layout_width="match_parent"
    android:layout_height="244dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/linearlayout_front"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:background="@drawable/card_shape_front" >

            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:rotation="-90"
                android:text="Testing"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearlayout_frontcard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/card_shape_front"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center">

                <TableRow
                    android:id="@+id/tableRowHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" >

                    <TextView
                        android:id="@+id/textHoursHeader"
                        style="@style/TableTextHeader"
                        android:text="@string/Hours" />

                    <TextView
                        android:id="@+id/textHoursWeekly"
                        style="@style/TableTextContent"
                        android:text="@string/weekly_hours" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowPayRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" >

                    <TextView
                        android:id="@+id/textPayRateHeader"
                        style="@style/TableTextHeader"
                        android:text="@string/PayRate" />

                    <TextView
                        android:id="@+id/textPayRate"
                        style="@style/TableTextContent"
                        android:text="@string/pay_rate" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowNetPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp" >

                    <TextView
                        android:id="@+id/textNetPayHeader"
                        style="@style/TableTextHeader"
                        android:text="@string/NetPay" />

                    <TextView
                        android:id="@+id/textNetPay"
                        style="@style/TableTextContent"
                        android:text="@string/net_pay" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnDetails"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/light_blue_button"
            android:text="@string/details"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/light_blue_button"
            android:text="@string/edit"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/black" />

</LinearLayout>